# Okta MCP Server Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# OKTA CONFIGURATION (Required)
# ===========================================

# Your Okta domain (without https://)
# Example: dev-12345.okta.com or your-company.oktapreview.com
OKTA_DOMAIN=your-domain.okta.com

# Your Okta API Token (SSWS token)
# Create at: Admin Console > Security > API > Tokens
# Required scopes: okta.users.read, okta.apps.read, okta.governance.entitlements.manage
OKTA_API_TOKEN=your-api-token-here

# ===========================================
# S3 INTEGRATION (Optional)
# ===========================================
# Enable S3 integration for CSV file retrieval from cloud storage

# Enable/disable S3 integration
S3_ENABLED=false

# S3 bucket name containing CSV files
S3_BUCKET_NAME=your-bucket-name

# Optional: S3 prefix/folder path (leave empty for root)
# Ignored if S3_ALLOWED_PATHS is set
S3_PREFIX=csv-files/

# Optional: Restrict search to specific paths (comma-separated)
# If set, S3_PREFIX is ignored.
# Example: S3_ALLOWED_PATHS=finance/reports/,hr/audits/
S3_ALLOWED_PATHS=


# AWS Region
AWS_REGION=us-east-1

# AWS Credentials (if not using IAM roles or ~/.aws/credentials)
# Note: For temporary session credentials, include AWS_SESSION_TOKEN
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=
